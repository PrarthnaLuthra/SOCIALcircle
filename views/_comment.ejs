<li id="comment-<%= comment._id %>">
  <p>
    <%= comment.content%>
    <small> <%= comment.user.name %> </small>

    <% if(locals.user && locals.user.id == comment.user.id){%>

    <small>
      <a class="delete-comment-button" href="/comments/destroy/<%= comment.id%>">
        <i class="fa-solid fa-delete-left"></i>
      </a>
    </small>
  </p>

  <%}%>
</li>
