<link type="text/css" rel="stylesheet" href="<%=assetPath('css/signIn.css')%>"/>/>
<h1>Sign Up</h1>

<form action="/users/create" method="POST">
  <input type="text" name="name" placeholder="Hi! Your Name Please" required />
  <input
    type="email"
    name="email"
    placeholder="Enter your email address!"
    required
  />
  <input
    type="password"
    name="password"
    placeholder="Enter a password"
    required
  />
  <input
    type="password"
    name="confirm_password"
    placeholder="Enter your password again"
    required
  />

  <button type="submit">Sign Up</button>
</form>
<p class="googleAuth">
  <a href="/users/auth/google">Sign In/Sign Up using Google</a>
</p>
